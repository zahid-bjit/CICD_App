pipeline {
    agent any
    stages {
        stage('Stop IIS') {
            steps {
                bat 'powershell -Command "Invoke-Command -ComputerName 54.255.72.244 -ScriptBlock { iisreset /stop }"'
            }
        }
        stage('Start IIS') {
            steps {
                "Invoke-Command -ComputerName 54.255.72.244 -ScriptBlock { iisreset /start }"
            }
        }
    }
}
