pipeline {
    agent any
    stages {
        stage('Stop IIS') {
            steps {
                powershell 'invoke-command -computername 54.255.72.244 -scriptblock {iisreset /STOP}'
            }
        }
        stage('Start IIS') {
            steps {
                powershell 'invoke-command -computername 54.255.72.244 -scriptblock {iisreset /START}'
            }
        }
    }
}
